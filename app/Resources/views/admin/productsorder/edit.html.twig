<body>
<header id="header"><!--header-->
    <div class="header_top"><!--header_top-->
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="contactinfo">
                        <ul class="nav nav-pills">
                            <li><a href="#"><i class="fa fa-phone"></i> +359 898429685</a></li>
                            <li><a href="#"><i class="fa fa-envelope"></i> cattleyashop@gmail.com </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/header_top-->
    {% if app.user %}
        <div class="header-middle"><!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="logo pull-left">
                            <a href="{{ path('default_index') }}"><img src="{{ asset('images/home/logo1.png') }}" alt="" /></a>
                        </div>

                    </div>
                    <div class="col-sm-8">
                        <div class="shop-menu pull-right">
                            <ul class="nav navbar-nav">
                                <li><a href="{{ path('user_profile') }}"><i class="fa fa-user"></i> Акаунт </a></li>
                                <li><a href="{{ path('checkout') }}"><i class="fa fa-crosshairs"></i> Checkout</a></li>
                                <li><a href="{{ path('cart_view') }}"><i class="fa fa-shopping-cart"></i> Cart</a></li>
                                <li><a href="{{ path('security_logout') }}"><i class="fa fa-lock"></i> Logout</a></li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->

    {% else %}
        <div class="header-middle"><!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="logo pull-left">
                            <a href="{{ path('default_index') }}"><img src="{{ asset('images/home/logo1.png') }}" alt="" /></a>
                        </div>

                    </div>
                    <div class="col-sm-8">
                        <div class="shop-menu pull-right">
                            <ul class="nav navbar-nav">
                                <li><a href="{{ path('user_profile')}}"><i class="fa fa-user"></i> Account</a></li>
                                <li><a href="{{ path('checkout') }}l"><i class="fa fa-crosshairs"></i> Checkout</a></li>
                                <li><a href="{{ path('cart_view') }}"><i class="fa fa-shopping-cart"></i> Cart</a></li>
                                <li><a href="{{ path('security_login') }}"><i class="fa fa-lock"></i> Login</a></li>
                                <li><a href="{{ path('user_register') }}"><i class="fa fa-lock"></i> Register</a></li>


                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->

    {% endif %}
    <div class="header-bottom"><!--header-bottom-->
        <div class="container">
            <div class="row">
                <div class="col-sm-9">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="mainmenu pull-left">
                        <ul class="nav navbar-nav collapse navbar-collapse">
                            {% if app.user %}
                                {% if app.user.isAdmin() or app.user.isEditor() %}
                                    <li class="dropdown"><a href="#">Admin<i class="fa fa-angle-down"></i></a>
                                        <ul role="menu" class="sub-menu">
                                            {% if app.user.isAdmin() %}
                                                <li><a href="{{ path('admin_users') }}">Users</a></li>
                                            {% endif %}
                                            <li><a href="{{ path('categories_create') }}">create Category</a></li>
                                            <li><a href="{{ path('admin_categories') }}">Category list</a></li>
                                            <li><a href="{{ path('products_new') }}">Create product</a></li>
                                            <li><a href="{{ path('productsorder_index') }}">Users orders</a></li>
                                            <li><a href="{{ path('admin_list_promotions') }}">Promotions</a></li>


                                        </ul>
                                    </li>
                                {% endif %}
                            {% endif %}
                            <li><a href="{{ path('default_index') }}" class="active">Home</a></li>
                            <li class="dropdown"><a href="#">Магазин<i class="fa fa-angle-down"></i></a>
                                <ul role="menu" class="sub-menu">
                                    <li><a href="{{ path('list') }}">Продукти</a></li>
                                    <li><a href="{{ path('checkout') }}">Checkout</a></li>
                                    <li><a href="{{ path('cart_view') }}">Cart</a></li>

                                </ul>
                            </li>

                            <li><a href="{{ path('contactus') }}">Contact us</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="search_box pull-right">
                        <input type="text" placeholder="Search"/>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/header-bottom-->
