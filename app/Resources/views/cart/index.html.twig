{% extends 'base.html.twig' %}

{% block title %}Shopping Cart{% endblock %}

{% block body %}
    <h1>Shopping Cart</h1>
    <div class="row">
        <div class="col-md-8">
            <form action="{{ path('update_cart') }}" method="post">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Subtotal</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.product.name }}</td>
                            <td>${{ item.itemPrice }}</td>
                            <td>{{ item.quantity }}</td>

                            <td>${{ item.quantity * item.itemPrice }}</td>
                            {#<td>#}
                                {#<a href="{{ path('update_cart', { 'id': item.product.id }) }}">Update</a>#}
                            {#</td>#}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </form>
        </div>
        <div class="col-md-4">
            <p>Order Total: ${{ total }}</p>
            {#<a class="btn btn-sm btn-success" href="{{ path('web_shop_sales_checkout') }}">#}
                {#<i class="fa fa-truck" aria-hidden="true"></i> Go to Checkout#}
            {#</a>#}
        </div>
    </div>
{% endblock %}