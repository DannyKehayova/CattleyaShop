{% extends 'base.html.twig' %}

{% block title %}Shopping Cart{% endblock %}

{% block body %}
    <h1>Shopping Cart</h1>
    <div class="row">
        <div class="col-md-8">

                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Subtotal</th>
                        <th>Remove from cart</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.product.name }}</td>
                            <td>${{ item.itemPrice }}</td>
                            <td>{{ item.quantity }}</td>
                            <td>${{ item.quantity * item.itemPrice }}</td>
                            <td>
                                <a href="{{ path('user_items_delete', { 'id': item.id }) }}">Remove</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
        </div>
        <div class="col-md-4">
            <p>Order Total: ${{ total }}</p>
            <a class="btn btn-sm btn-success" href="{{ path('checkout') }}">
                <i class="fa fa-truck" aria-hidden="true"></i> Go to Checkout
            </a>
        </div>
    </div>
{% endblock %}