{% extends 'base.html.twig' %}

{% block body %}
    <h1>Order details</h1>
    <table class="table table-hover">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ order.id }}</td>
        </tr>

        <tr>
            <th>Status</th>
            <td>{{ order.status}}</td>
        </tr>

        <tr>
            <th>Created at</th>
            <td>{% if order.createdAt %}{{ order.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}


